@{
    ViewData["Title"] = "Statistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="user-statistics">
    <h2 class="display-4">Statistics</h2> 

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Growth Over Time</h5>
                    <canvas id="lineChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Demographics</h5>
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Activity Metrics</h5>
                    <canvas id="activityChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Retention Rate</h5>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h2 class="card-value">75%</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6 small">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Users vs. Inactive Users</h5>
                    <canvas id="activeInactiveChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
