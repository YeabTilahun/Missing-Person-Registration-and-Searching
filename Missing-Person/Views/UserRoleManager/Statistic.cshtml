            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'User Growth',
                data: [100, 200, 300, 400, 500, 600], // Sample data, replace with your actual data
                borderColor: '#007bff', // Customize the line color
                backgroundColor: 'rgba(0, 123, 255, 0.1)', // Customize the area fill color
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    grid: {
                        display: false
                    }
                },
                y: {
                    grid: {
                        color: '#f3f3f3'
                    }
                }
            }
        }
    });

    // Bar Chart
    var barChart = new Chart(document.getElementById('barChart'), {
        type: 'bar',
        data: {
