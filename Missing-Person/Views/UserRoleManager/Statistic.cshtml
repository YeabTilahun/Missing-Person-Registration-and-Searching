                backgroundColor: '#007bff', // Customize the bar color
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    grid: {
                        display: false
                    }
                },
                y: {
                    grid: {
                        color: '#f3f3f3'
                    }
                }
            }
        }
    });

    // Activity Chart
    var activityChart = new Chart(document.getElementById('activityChart'), {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
