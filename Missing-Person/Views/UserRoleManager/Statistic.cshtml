<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    var activeInactiveChart = new Chart(document.getElementById('activeInactiveChart'), {
        type: 'pie',
        data: {
            labels: ['Active Users', 'Inactive Users'],
            datasets: [{
                data: [75, 25], // Sample data, replace with your actual data
                backgroundColor: ['#007bff', '#ced4da'], // Customize the colors
                borderWidth: 0
            }]
        },
        options: {
            // Add chart options and customization here
            responsive: true,
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    fontColor: '#333',
