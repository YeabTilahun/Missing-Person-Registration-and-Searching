@model Missing_Person.ViewModel.DisplayAllUser

@{
    ViewBag.Title = "Edit User Profile";
}

<h1>Edit User Profile</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" asp-controller="User" method="post">
                <div class="form-group">
                    <label >First Name:</label>
                    <input  class="form-control" value="@Model.user.FirstName" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >Last Name:</label>
                    <inputclass="form-control" value="@Model.user.LastName" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >Email:</label>
                    <input class="form-control" value="@Model.user.UserName" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >Address:</label>
                    <input class="form-control" value="@Model.user.Address" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >City:</label>
                    <input  class="form-control" value="@Model.user.City" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >Country:</label>
                    <input class="form-control" value="@Model.user.Country" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
