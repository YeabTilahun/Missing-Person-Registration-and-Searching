@model Missing_Person.ViewModel.DisplayAllViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<form asp-action="Search" asp-controller="MissingPerson" method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group row justify-content-center">
        <div class="col-sm-10 justify-content-center">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="SearchOption" id="searchByName" value="ByName" checked>
                <label class="form-check-label" for="searchByName">Search by Name</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="SearchOption" id="searchByImage" value="ByImage">
                <label class="form-check-label" for="searchByImage">Search by Image</label>
            </div>
        </div>
    </div>

    <div id="nameSearch" class="form-group row justify-content-center">
        <div class="col-sm-10">
            <input asp-for="@Model.MissingPerson.Name" class="form-control" />
            <span asp-validation-for="@Model.MissingPerson.Name" class="text-danger"></span>
        </div>
    </div>

    <div id="imageSearch" class="form-group row justify-content-center" style="display: none;">
        <div class="col-sm-10">
            <input asp-for="@Model.MissingPerson.ImagePath" type="file" class="form-control-file" />
            <span asp-validation-for="@Model.MissingPerson.ImagePath" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-sm-10">
            <input type="submit" value="Search" class="btn btn-primary mb-2 d-block mx-auto" style="width: 200px; margin-top: 10px;" />
        </div>
    </div>
</form>

<h3>Missing People</h3>

<div class="row">
    @foreach (var missingPerson in Model.MissingPeople)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="~/@missingPerson.ImageUrl" class="card-img-top" alt="Missing Person Image" sizes="150px">
                <div class="card-body">
                    <h5 class="card-title">@missingPerson.Name</h5>
                    <p class="card-text">@missingPerson.Description</p>
                    <a href="@Url.Action("Details", "MissingPerson", new { id = missingPerson.Id })" class="btn btn-primary">See Details</a>
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[name="SearchOption"]').change(function () {
                var selectedOption = $('input[name="SearchOption"]:checked').val();
                if (selectedOption === "ByImage") {
                    $('#imageSearch').show();
                    $('#nameSearch').hide();
                } else {
                    $('#imageSearch').hide();
                    $('#nameSearch').show();
                }
            });
        });
    </script>
}


