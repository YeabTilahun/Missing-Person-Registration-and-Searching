@model Missing_Person.ViewModel.DisplayAllViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> userManager
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .text-center {
            margin-bottom: 40px;
        }

        .display-4 {
            color: #dc3545;
            font-weight: bold;
        }

        .row {
            margin-right: -15px;
            margin-left: -15px;
        }

        .col-md-4 {
            padding: 15px;
        }

        .card {
            position: relative;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-img-top {
            width: 100%;
            height: 330px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 16px;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            text-align: center;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4 text-danger fw-bold">Missing</h1>
    </div>

    <div class="row">
        @foreach (var missingPerson in Model.MissingPeople)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="~/@missingPerson.ImageUrl" class="card-img-top" alt="Missing Person Image" sizes="150px">
                    <div class="card-body">
                        <h5 class="card-title">@missingPerson.Name</h5>
                        <p class="card-text">@missingPerson.Description</p>
                        <a href="@Url.Action("Details", "MissingPerson", new { id = missingPerson.Id })" class="btn btn-primary">See Details</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await userManager.GetUserAsync(User);
                            var role = await userManager.GetRolesAsync(user);
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[name="SearchOption"]').change(function () {
                var selectedOption = $('input[name="SearchOption"]:checked').val();
                if (selectedOption === "ByImage") {
                    $('#imageSearch').show();
                    $('#nameSearch').hide();
                } else {
                    $('#imageSearch').hide();
                    $('#nameSearch').show();
                }
            });
        });
    </script>
}


